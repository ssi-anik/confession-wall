version: '3'

services:
    nginx:
        image: nginx:1.13.6
        ports:
            - 80:80
        volumes:
            - .:/var/www/html
            - ./docker/nginx/default.conf:/etc/nginx/conf.d/default.conf
    
    php:
        build:
            context: .
            dockerfile: ./docker/php/Dockerfile
        volumes:
            - .:/var/www/html
        links:
            - redis
            - postgres
            - beanstalkd
    
    worker:
        build:
            context: ./docker/php
            dockerfile: worker.dockerfile
        volumes:
            - .:/var/www/html
        links:
            - redis
            - postgres
            - beanstalkd
    
    postgres:
        image: postgres:10.4-alpine
        ports:
            - 5432:5432
        volumes:
            - ~/.backup/postgres/anonym-confession:/var/lib/postgresql/data
        environment:
            - POSTGRES_USER=root
            - POSTGRES_PASSWORD=secret
            - POSTGRES_DB=anonym-confession
    
    redis:
        image: redis:5.0.5
        ports:
            - 6379:6379
        volumes:
            - ~/.backup/redis/anonym-confession:/data
    
    beanstalkd:
        build: ./docker/beanstalkd
        ports:
            - 11300:11300
        volumes:
            - ~/.backup/beanstalkd/anonym-confession:/binlog
    
    beanstalk-console:
        image: sirajul/beanstalk-console
        ports:
            - 9000:80
        links:
            - beanstalkd